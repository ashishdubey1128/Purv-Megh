                	<a href="/" target="_blank"><img src="/images/logo.png" alt="logo" height="40" width="40" style="position: relative;"></a>
                </li>

            </ul>
            </div>
        </div>
        <div class="container" style="padding-top: 20%;text-align: center;">
        <div>
          <h1>Files uploaded on Cloud</h1><br><br>
           <table class="table" style="background-color: rgba(0,0,0,0.8);color: white;">
          <th style="text-align: center;">File Name</th>
          <%file.forEach(function(file){%>
          <tr>
            <td>
              <%=file.filename%>
            </td>
            <%if(file.reqid.includes(uid)==false){%>
            <td>
              <a href="/request/<%=file._id%>/<%=file.userid%>" class="btn btn-md btn-primary" >Request access</a>
            </td>
            <%} else{%>
            <td>
              <a href="/view/<%=file._id%>" class="btn btn-md btn-primary" >View File</a>
            </td>
            <%}%>
          </tr>
          <%});%>
        </table>
        </div>
      </div>
      </body>
